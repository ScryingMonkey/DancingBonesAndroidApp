<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.dancingbones.dancingbonesapp.DonateFragment"
    android:layout_marginTop="@dimen/fragment_top_offset" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:text="@string/title_donate"
            android:id="@+id/title_donate"
            android:layout_centerHorizontal="true"
            style="@style/title" />
        <TextView
            android:text="@string/content_hiker_info"
            android:id="@+id/content_hiker_info"
            android:layout_below="@id/title_donate"
            style="@style/content" />
        <Button
            android:text="@string/nav_donate"
            android:id="@+id/donate_button"
            android:layout_below="@id/content_hiker_info"
            android:layout_centerHorizontal="true"
            style="@style/button" />

    </RelativeLayout>
</ScrollView>
