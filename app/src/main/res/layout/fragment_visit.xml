<ScrollView    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="net.dancingbones.dancingbonesapp.VisitFragment"
    style="@style/ScrollingScreen">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <TextView
        android:text="@string/title_visit"
        android:id="@+id/title_visit"
        android:layout_centerHorizontal="true"
        style="@style/title"/>
    <TextView
        android:text="@string/content_visit"
        android:id="@+id/content_visit"
        android:layout_below="@id/title_visit"
        android:layout_centerHorizontal="true"
        style="@style/content" />
    <TextView
        android:text=""
        android:id="@+id/distance_to"
        android:layout_below="@id/content_visit"
        android:layout_centerHorizontal="true"
        style="@style/content" />
    <Button
        android:text="@string/button_visit"
        android:id="@+id/button_visit"
        android:layout_below="@id/distance_to"
        android:layout_centerHorizontal="true"
        style="@style/button" />

    </RelativeLayout>
</ScrollView>
