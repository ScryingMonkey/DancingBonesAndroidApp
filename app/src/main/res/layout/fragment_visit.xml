<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.dancingbones.dancingbonesapp.VisitFragment"
    android:layout_marginTop="@dimen/fragment_top_offset"
    android:clickable="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <TextView
        android:text="@string/title_visit"
        android:id="@+id/title_visit"
        android:layout_centerHorizontal="true"
        style="@style/title"/>
    <TextView
        android:text="@string/content_hiker_info"
        android:id="@+id/content_visit"
        android:layout_below="@+id/title_visit"
        android:layout_centerHorizontal="true"
        style="@style/content"
        android:textSize="@dimen/content_text_size" />
    <Button
        android:text="@string/button_visit"
        android:id="@+id/button_visit"
        android:layout_below="@id/content_visit"
        android:layout_centerHorizontal="true"
        style="@style/button" />

    </RelativeLayout>
</ScrollView>
